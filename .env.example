# ===============================================
# WORLD BUILDER MODULE CONFIGURATION
# ===============================================

# Module Configuration
NEXT_PUBLIC_MODULE_NAME=world-builder
NEXT_PUBLIC_MODULE_VERSION=0.1.0
NEXT_PUBLIC_API_URL=http://localhost:3003/api

# ===============================================
# FIREBASE CONFIGURATION (Shared with main platform)
# ===============================================
NEXT_PUBLIC_FIREBASE_API_KEY=your-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789012
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789012:web:abc123

# ===============================================
# GOOGLE CLOUD CONFIGURATION
# ===============================================
GOOGLE_APPLICATION_CREDENTIALS=./service-account-key.json
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_CLOUD_LOCATION=us-central1

# ===============================================
# AI SERVICES
# ===============================================
GOOGLE_VERTEX_LOCATION=us-central1
GOOGLE_VERTEX_MODEL=gemini-2.0-flash
GOOGLE_API_KEY=your-gemini-api-key

# ===============================================
# STORAGE CONFIGURATION
# ===============================================
GOOGLE_MAPS_BUCKET_NAME=world-builder-maps
GOOGLE_ASSETS_BUCKET_NAME=world-builder-assets

# ===============================================
# FEATURES FLAGS
# ===============================================
NEXT_PUBLIC_ENABLE_AI_GENERATION=true
NEXT_PUBLIC_ENABLE_COLLABORATION=true
NEXT_PUBLIC_ENABLE_3D_PREVIEW=false
NEXT_PUBLIC_ENABLE_VOICE_SYNTHESIS=true

# ===============================================
# INTEGRATION WITH OTHER MODULES (Optional)
# ===============================================
RPG_MODULE_URL=http://localhost:3001
TCG_MODULE_URL=http://localhost:3002
MAIN_PLATFORM_URL=http://localhost:3000
